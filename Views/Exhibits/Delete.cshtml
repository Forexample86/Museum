@model Museum.Models.Exhibit

<h2>Delete Exhibit</h2>

<form asp-action="DeleteConfirmed" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Exhibit Name:</label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description:</label>
        <textarea asp-for="Description" class="form-control" readonly></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete Exhibit</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@model List<Exhibition>

<h2>Exhibitions</h2>

@foreach (var exhibit in Model)
{
    <div>
        <h3>@exhibit.Name</h3>
        <p>@exhibit.Description</p>
        <a asp-action="Edit" asp-route-id="@exhibit.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@exhibit.Id">Delete</a>
    </div>
}

<a asp-action="Create">Create New Exhibition</a>
